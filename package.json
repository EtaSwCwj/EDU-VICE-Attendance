{
  "name": "edu-vice-attendance",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "pack:flutter": "powershell -ExecutionPolicy Bypass -File ./scripts/pack_flutter_save.ps1",
    "dev:scrcpy": "powershell -ExecutionPolicy Bypass -File ./scripts/scrcpy_dev.ps1",
    "analyze": "powershell -NoProfile -ExecutionPolicy Bypass -Command \"Set-Location ./flutter_application_1; flutter analyze\"",
    "claude": "powershell -ExecutionPolicy Bypass -File ./scripts/claude_code.ps1",
    "build:apk": "powershell -NoProfile -ExecutionPolicy Bypass -Command \"Set-Location ./flutter_application_1; flutter build apk --release\"",
    "watch:task": "node scripts/auto_task_watcher.js",
    "watch:manager": "node scripts/manager_watcher.js",
    "watch:worker": "node scripts/worker_watcher.js",
    "watch:all": "concurrently \"npm run watch:manager\" \"npm run watch:worker\""
  },
  "devDependencies": {
    "gh-pages": "^6.3.0",
    "chokidar": "^3.5.3",
    "concurrently": "^8.2.2"
  }
}
